<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.emilovich.boyscout.Activities.MorseActivity"
    android:background="@drawable/boyscout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonMorseSOS"
        android:layout_alignTop="@+id/textView6"
        android:layout_toStartOf="@+id/buttonMorse"
        android:background="@drawable/std"
        android:text="SOS"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonMorseHelp"
        android:background="@drawable/std"
        android:layout_alignTop="@+id/textView6"
        android:layout_toEndOf="@+id/buttonMorse"
        android:text="HELP"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonMorse"
        android:layout_marginBottom="42dp"
        android:background="@drawable/std"
        android:layout_alignBottom="@+id/buttonMorseCodes"
        android:layout_centerHorizontal="true"
        android:text="Morse \nText!"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonMorseCodes"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/std"
        android:text="More"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonFlashlight"
        android:background="@drawable/std"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="On/Off"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/morseText"
        android:width="260dp"
        android:hint="Input text to morse!"
        android:gravity="top"
        android:lines="6"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:background="@drawable/pergament"
        android:layout_below="@+id/buttonMorseSOS"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/buttonMorse"
        android:padding="40dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
